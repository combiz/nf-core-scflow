{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/scflow/master/assets/schema_input.json",
    "title": "nf-core/scflow pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "manifest": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Manifest key must be provided and cannot contain spaces"
            }
        },
        "required": [
            "manifest"
        ]
    }
}
